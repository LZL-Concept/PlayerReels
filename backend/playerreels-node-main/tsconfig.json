{
    "compilerOptions": {
        "module": "ESNext", // Use ESNext to generate native ESM output
        "moduleResolution": "node",
        "target": "ES2020", // Target modern JS
        "esModuleInterop": true, // Enable compatibility with CommonJS modules
        "skipLibCheck": true, // Speed up compilation
        "strict": true, // Enable strict type-checking options
        "allowSyntheticDefaultImports": true,
        "sourceMap": true, // Optional, if you want source maps
        "outDir": "./dist", // Output directory for compiled JS
        "rootDir": "./src" // Source files directory
    },
    "include": [
        "src/**/*"
    ], // Include all TypeScript files in src/
    "exclude": [
        "node_modules"
    ] // Exclude node_modules from compilation
}